            //ATM介紹---------------------------------------------
            #tab-twAtm.table__con.active
              .table__container(data-aos="fade-up" data-aos-duration="900")
                .twAtm
                  .twAtm-img
                    img(src=root+"images/photo_palm-vein.png" alt="")
                  .twAtm-content
                    .twAtm-content_icon.flex-center
                      img(src=root+"images/icon_atm-intro-1.svg" alt="")
                    .twAtm-content_text
                      h3.maruB  提款
